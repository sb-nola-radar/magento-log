<?xml version="1.0"?>
<config>
    <modules>
        <Guidance_Log>
            <version>1.0.0</version>
        </Guidance_Log>
    </modules>
    <global>
        <models>
           <guidance_log>
                <class>Guidance_Log_Model</class>
                <resourceModel>guidance_log_mysql4</resourceModel>
            </guidance_log>
            <guidance_log_mysql4>
                <class>Guidance_Log_Model_Mysql4</class>
                <entities>
                    <log>
                        <table>guidance_log</table>
                    </log>
                </entities>
            </guidance_log_mysql4>
        </models>
        <blocks>
           <guidance_log>
                <class>Guidance_Log_Block</class>
            </guidance_log>
        </blocks>
        <helpers>
            <guidance_log>
                <class>Guidance_Log_Helper</class>
            </guidance_log>
        </helpers>
        <resources>
            <guidance_log_setup>
                <setup>
                    <module>Guidance_Log</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </guidance_log_setup>
        </resources>
    </global>
    <default>
         <guidancelog>
             <fileappendersettings>
                 <log_filename>logfile.log</log_filename>
                 <log_file_maxbackupindex>10</log_file_maxbackupindex>
                 <log_file_size>3MB</log_file_size>
                 <file_layout_pattern>%d{Y-m-d H:i:s.u} %c %-5p %m%n</file_layout_pattern>
             </fileappendersettings>
             <mailappendersettings>
                 <mail_subject>Data Log</mail_subject>
                 <mail_smtp_host>localhost</mail_smtp_host>
                 <mail_smtp_port>25</mail_smtp_port>
                 <mail_layout_pattern>%d{Y-m-d H:i:s.u} %c %-5p %m%n</mail_layout_pattern>
             </mailappendersettings>
             <databaseappendersettings>
                 <database_server_url>localhost</database_server_url>
                 <database_name>magento</database_name>
                 <database_account_username>root</database_account_username>
                 <database_account_password></database_account_password>
                 <database_table_name>guidance_log</database_table_name>
                 <database_insert_sql>INSERT INTO __TABLE__ (timestamp, logger, level, message,additional_info) VALUES (?, ?, ?, ?, ?)</database_insert_sql>
                 <database_insert_pattern>%d,%c,%p,%m,%a</database_insert_pattern>
                 <database_create_table>0</database_create_table>
             </databaseappendersettings>
             <phpappendersettings>
                 <php_appender_log>0</php_appender_log>
                 <php_layout_pattern>%d{Y-m-d H:i:s.u} %c %-5p %m%n</php_layout_pattern>
             </phpappendersettings>
         </guidancelog>
     </default>
     <admin>
        <routers>
            <guidancelog>
                <use>admin</use>
                <args>
                    <module>Guidance_Log</module>
                    <frontName>guidancelog</frontName>
                </args>
            </guidancelog>
        </routers>
    </admin>
    <adminhtml>        
        <layout>
            <updates>
                <guidancelog>
                    <file>guidance/log.xml</file>
                </guidancelog>
            </updates>
        </layout>        
    </adminhtml>
  </config>